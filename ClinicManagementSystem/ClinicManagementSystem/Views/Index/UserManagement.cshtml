@{
    ViewBag.Title = "User Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    body {
        background-image: url("https://img.freepik.com/free-photo/pastel-blue-vignette-concrete-textured-background_53876-102637.jpg?t=st=1653456909~exp=1653457509~hmac=03047aeb910b1cbb26362c7a47f6d4af97becd3f0c4c27a2c7effe659c85074f&w=1060");
        margin: 0;
    }

    .fa-sort, .fa-edit, .fa-check-square, .fa-times-circle {
        color: teal;
        cursor: pointer;
    }

    #ManagePager li:hover {
        cursor: pointer;
    }
</style>

<script type="text/javascript" src=~/js/UserManagement.js></script>
<script type="text/javascript" src=~/js/CreateNewUser.js></script>



<br />
<br />
<br />
<body>
    <center><h2><i class="fa fa-users"></i> Member Records</h2></center>



    <div>
        <div class="row">

            <div class=" col-xs-12 col-sm-12 col-md-12 col-lg-12 ">


                <a class="btn btn-primary" asp-action="RegisterForm">Create New</a>
                <hr />
                <table class="table table-striped table-border table-hover" id="table14">
                    <thead>
                        <tr class="text-center">
                            <th>
                                Sr. No.:
                            </th>
                            <th>
                                <i id="FirstNameSortingLink"></i> First Name:
                            </th>
                            <th>
                                <i id="LastNameSortingLink"></i> Last Name:
                            </th>

                            <th>
                                <i id="EmailIdSortingLink"></i> Email Id:
                            </th>

                            <th>
                                UserRole
                            </th>

                            <th>
                                Status
                            </th>
                            <th>
                                Edit Record
                            </th>
                        </tr>
                    </thead>
                    <tbody id="UserTableBody">
                    </tbody>
                </table>
            </div>
        </div><hr />

    </div>

    <div class="modal fade" id="EditUserRecord" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title"><i class="fa fa-edit"></i> Update Member Record</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <span>First Name:</span><br />
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input name="TxtFName" id="TxtFName" type="text" placeholder="Enter First Name Here.." maxlength="20" class="form-control" />
                                </div>
                                <small id="TxtFNameValidate" class="text-danger"></small>
                            </div>
                            <div class="form-group">
                                <span>Last Name:</span><br />
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <input name="TxtLName" id="TxtLName" type="text" placeholder="Enter Last Name Here.." maxlength="20" class="form-control" />
                                </div>
                                <small id="TxtLNameValidate" class="text-danger"></small>
                            </div>
                            
                            <div class="form-group">
                                <span>Email Id:</span><br />
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                    <input name="TxtEmailId" id="TxtEmailId" type="text" placeholder="Enter Email Id Here.." maxlength="50" class="form-control" />
                                </div>
                                <small id="TxtEmailIdValidate" class="text-danger"></small>
                            </div>
                            <div class="form-group">
                                <span>User Role:</span><br />
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i> | <i class="fa fa-user-plus"></i></span>
                                    <select id="DDL_User" class="form-control">
                                        <option value='U'>User</option>
                                        <option value='A'>Admin</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group text-right">
                                <a id="BtnUpdateRecord" class="btn btn-primary"><i class="fa fa-edit" style="color:white!important"></i> Update</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>




</body>